{
  "name": "ecoledger-contracts",
  "version": "1.0.0",
  "description": "EcoLedger Smart Contracts for VeChain",
  "scripts": {
    "test": "npx hardhat test --network hardhat",
    "test:solo": "npx hardhat test --network vechain_solo",
    "test:simplified": "npx hardhat test test/SimplifiedSustainabilityLedger.test.ts --network hardhat",
    "test:ecoledger": "npx hardhat test test/EcoLedger.test.ts --network hardhat",
    "contracts:test": "npm run test",
    "compile": "npx hardhat compile",
    "deploy:ecoledger:testnet": "npx hardhat run scripts/deploy-ecoledger.ts --network vechain_testnet",
    "deploy": "npm run deploy:ecoledger:testnet",
    "deploy:all": "npm run compile && npm run test:ecoledger && npm run deploy:ecoledger:testnet",
    "solo-up": "docker-compose up -d",
    "solo-down": "docker-compose down",
    "clean": "npx hardhat clean",
    "verify:testnet": "npx hardhat verify --network vechain_testnet",
    "verify:mainnet": "npx hardhat verify --network vechain_mainnet"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "dayjs": "^1.11.10",
    "dotenv": "^17.2.3",
    "hardhat": "^2.19.1",
    "hardhat-gas-reporter": "^1.0.8",
    "react-slot-counter": "^2.2.5",
    "solidity-coverage": "^0.8.1",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@vechain/sdk-hardhat-plugin": "1.0.0-beta.30",
    "ethers": "^6.7.1",
    "ganache-cli": "^6.12.2"
  }
}
