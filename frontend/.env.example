# EcoLedger Frontend Environment Variables
# Copy this file to .env.local for local development
# For production deployment, set these in your Netlify environment variables

# VeChain Network Configuration
VITE_VECHAIN_NETWORK=testnet
# Options: testnet, mainnet

# Contract Address (VeChain Testnet)
VITE_CONTRACT_ADDRESS=0x92e647e3bc952154e8336673c4acd1acdcbe63eb

# App Configuration
VITE_APP_NAME=EcoLedger
VITE_APP_DESCRIPTION=Blockchain Sustainability Platform
VITE_APP_VERSION=1.0.0

# API Configuration (if using backend)
VITE_API_BASE_URL=https://your-api-domain.com/api
# For local development: http://localhost:3000/api

# Blockchain Explorer URLs
VITE_EXPLORER_URL=https://explore-testnet.vechain.org
# For mainnet: https://explore.vechain.org

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=false

# Build Configuration
VITE_BUILD_MODE=production
# Options: development, production
